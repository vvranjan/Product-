<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vaibhav.producto.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


    <RelativeLayout
        android:paddingTop="10sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <AutoCompleteTextView
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="15sp"
        android:layout_width="355sp"
        android:layout_height="35sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:background="@drawable/rounded_white"
        android:hint="Enter your full name here"
        android:textSize="15sp"
        android:drawableLeft="@mipmap/user_icon"
        android:drawablePadding="10sp"
        android:id="@+id/name"
        android:layout_marginTop="20sp"/>

    <AutoCompleteTextView

        android:layout_marginLeft="30sp"
        android:layout_marginBottom="15sp"
        android:layout_width="355sp"
        android:layout_height="35sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:background="@drawable/rounded_white"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:drawableLeft="@mipmap/email_icon"
        android:drawablePadding="10sp"
        android:id="@+id/userEmail"
        android:layout_marginTop="65sp"/>

    <AutoCompleteTextView
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="15sp"
        android:layout_width="355sp"
        android:layout_height="35sp"
        android:layout_marginStart="15sp"
        android:inputType="textPassword"
        android:layout_marginEnd="15sp"
        android:background="@drawable/rounded_white"
        android:hint="Password"
        android:textSize="15sp"
        android:drawableLeft="@mipmap/password_icon"
        android:drawablePadding="10sp"
        android:id="@+id/password"
        android:layout_marginTop="110sp"/>

    <AutoCompleteTextView
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="15sp"
        android:layout_width="355sp"
        android:layout_height="35sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_white"
        android:hint="Confirm Password"
        android:textSize="15sp"
        android:drawableLeft="@mipmap/password_icon"
        android:drawablePadding="10sp"
        android:id="@+id/confirmPassword"
        android:layout_marginTop="155sp"/>

    <AutoCompleteTextView
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="15sp"
        android:layout_width="355sp"
        android:layout_height="35sp"
        android:inputType="phone"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:background="@drawable/rounded_white"
        android:hint="Contact No."
        android:textSize="15sp"
        android:drawableLeft="@mipmap/contact_icon"
        android:drawablePadding="10sp"
        android:id="@+id/Contact"
        android:layout_marginTop="200sp"/>

    <TextView
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="15sp"
        android:layout_width="355sp"
        android:layout_height="35sp"

        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_white"
        android:text="    Are you a..."
        android:textSize="20sp"
        android:layout_marginTop="245sp"
        android:drawablePadding="10sp"
        android:id="@+id/are_u_a"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="0sp"
        android:orientation="vertical"
        android:layout_marginTop="290sp"
        android:id="@+id/radioGroup">

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="285sp"
        android:layout_height="35sp"
        android:layout_marginLeft="10sp"
        android:background="@drawable/rounded_white"
        android:text="Consumer"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />


    <RadioButton

        android:id="@+id/radioButton2"
        android:layout_width="285sp"
        android:layout_marginTop="15sp"
        android:layout_height="35sp"
        android:layout_marginLeft="10sp"
        android:background="@drawable/rounded_white"
        android:text="Seller"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/radioButton1"
        android:layout_alignEnd="@+id/are_u_a" />

    </RadioGroup>

    <Button
        android:layout_width="270sp"
        android:layout_height="50sp"
        android:background="@drawable/rounded_button"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:onClick="profile"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginTop="430sp"

        android:layout_centerHorizontal="true" />

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>
